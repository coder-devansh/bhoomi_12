# Backend Environment Variables
# Copy this file to .env and update the values

# Server Configuration
PORT=3000
NODE_ENV=development

# MongoDB Connection String
# For local: mongodb://localhost:27017/bhoomisetu
# For Atlas: mongodb+srv://<username>:<password>@<cluster>.mongodb.net/<dbname>
MONGO_URI=mongodb://localhost:27017/bhoomisetu

# JWT Secret - Use a strong random string in production
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# Google Gemini API Key - Get yours at https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your-gemini-api-key

# CORS - Allowed origins (comma separated for multiple)
# For production, set to your frontend URL
CORS_ORIGIN=http://localhost:5173

# Upload Configuration
MAX_FILE_SIZE=10485760
